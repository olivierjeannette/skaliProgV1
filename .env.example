# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# App URL (pour les redirections OAuth)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Discord OAuth
# 1. Aller sur https://discord.com/developers/applications
# 2. Créer une application ou utiliser une existante
# 3. Aller dans OAuth2 > General
# 4. Copier Client ID et Client Secret
# 5. Ajouter les Redirect URLs:
#    - Local: http://localhost:3000/api/auth/discord/callback
#    - Production: https://skali-prog-v1.vercel.app/api/auth/discord/callback
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=https://skali-prog-v1.vercel.app/api/auth/discord/callback

# Auth Secret (pour signer les cookies)
# Générer avec: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-min-32-chars

# ====================================
# AUTHENTIFICATION ADMIN/COACH/ATHLETE
# ====================================
# Mots de passe pour accéder aux différentes interfaces
# IMPORTANT: Changer ces valeurs en production !
AUTH_PASSWORD_ADMIN=your-admin-password
AUTH_PASSWORD_COACH=your-coach-password
AUTH_PASSWORD_ATHLETE=your-athlete-password

# Peppy Integration (Scraping)
# Credentials pour se connecter à pro.peppy.cool
PEPPY_EMAIL=your-peppy-email
PEPPY_PASSWORD=your-peppy-password
# Clé API pour sécuriser l'endpoint /api/peppy/sync (optionnel)
PEPPY_SYNC_API_KEY=your-random-api-key

# VPS Video URL (pour les vidéos des cartes Epic)
# URL de base du serveur hébergeant les vidéos MP4 des cartes
# Exemple: http://123.45.67.89/cards ou https://static.ton-domaine.com/cards
NEXT_PUBLIC_VPS_VIDEO_URL=
