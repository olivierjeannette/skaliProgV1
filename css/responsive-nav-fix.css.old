/**
 * ═══════════════════════════════════════════════════════════════
 * RESPONSIVE NAV FIX
 * Force les tailles originales pour la navigation
 * À charger APRÈS responsive-auto-scale.css
 * ═══════════════════════════════════════════════════════════════
 */

/* ==========================================
   NAVIGATION LATÉRALE - TAILLES FIXES
   ========================================== */

/* Container navigation */
#leftNav,
.sidebar,
.navigation-wrapper {
    font-size: 16px !important;
}

/* Items du menu */
.nav-item {
    font-size: 0.9rem !important;
    padding: 0.75rem 1rem !important;
    min-height: auto !important;
    height: auto !important;
}

/* Texte des items */
.nav-item span {
    font-size: 0.9rem !important;
    white-space: nowrap !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
}

/* Icônes du menu */
.nav-item i {
    font-size: 1.2rem !important;
    min-width: 1.5rem !important;
}

/* Header du menu */
.sidebar-header,
.nav-header {
    padding: 1rem !important;
}

.sidebar-header h2,
.nav-header h2 {
    font-size: 1.2rem !important;
}

/* Logo */
.logo,
.sidebar-logo {
    width: 40px !important;
    height: 40px !important;
}

/* ==========================================
   TOP BAR / HEADER - TAILLES FIXES
   ========================================== */

.top-bar,
.app-header {
    height: 60px !important;
    padding: 0 1rem !important;
}

.top-bar button,
.app-header button {
    font-size: 0.9rem !important;
    padding: 0.5rem 1rem !important;
}

/* ==========================================
   CONTRÔLES ZOOM - TAILLES FIXES
   ========================================== */

.responsive-zoom-controls,
.zoom-controls {
    font-size: 14px !important;
}

.zoom-btn {
    width: 36px !important;
    height: 36px !important;
    font-size: 0.9rem !important;
    padding: 0 !important;
}

.zoom-display {
    font-size: 0.9rem !important;
    min-width: 50px !important;
}

.breakpoint-indicator {
    font-size: 0.75rem !important;
    padding: 0.5rem 0.75rem !important;
}

/* ==========================================
   TABS NAVIGATION - TAILLES CONTRÔLÉES
   ========================================== */

.module-tabs {
    gap: 0.5rem !important;
    padding: 0.5rem !important;
}

.module-tab {
    padding: 1rem 1.5rem !important;
    font-size: 1rem !important;
}

.module-tab-icon {
    font-size: 1.2rem !important;
}

.module-tab-label {
    font-size: 1rem !important;
}

/* ==========================================
   OVERRIDE CLAMP POUR NAVIGATION
   ========================================== */

/* Force les tailles fixes */
#leftNav *,
.sidebar *,
.nav-item *,
.top-bar *,
.app-header *,
.responsive-zoom-controls * {
    font-size: inherit !important;
}

/* Réapplique les tailles spécifiques */
#leftNav .nav-item {
    font-size: 0.9rem !important;
}

#leftNav .nav-item span {
    font-size: 0.9rem !important;
}

#leftNav .nav-item i {
    font-size: 1.2rem !important;
}

/* ==========================================
   MOBILE - Navigation compacte
   ========================================== */

@media (max-width: 768px) {
    .nav-item {
        font-size: 0.85rem !important;
        padding: 0.65rem 0.85rem !important;
    }

    .nav-item i {
        font-size: 1.1rem !important;
    }

    .nav-item span {
        font-size: 0.85rem !important;
    }
}

/* ==========================================
   FIX DÉBORDEMENT TEXTE
   ========================================== */

/* Empêche le débordement sur tous les items de navigation */
.nav-item,
.nav-item span,
.module-tab,
.module-tab span {
    max-width: 100% !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
    white-space: nowrap !important;
}

/* Container du menu avec largeur fixe */
#leftNav,
.sidebar {
    max-width: 250px !important;
    min-width: 250px !important;
    width: 250px !important;
}

/* Mobile: menu plus étroit */
@media (max-width: 768px) {
    #leftNav,
    .sidebar {
        max-width: 200px !important;
        min-width: 200px !important;
        width: 200px !important;
    }
}

/* ==========================================
   FORCE SIDEBAR À NE JAMAIS ÊTRE SCALÉ
   ========================================== */

/* Le sidebar doit TOUJOURS rester à taille normale */
.sidebar,
aside.sidebar {
    transform: scale(1) !important;
    transform-origin: top left !important;
    width: 250px !important;
    min-width: 250px !important;
    max-width: 250px !important;
    height: 100vh !important;
    max-height: 100vh !important;
    overflow-y: auto !important;
    overflow-x: hidden !important;
    position: fixed !important;
    left: 0 !important;
    top: 0 !important;
    z-index: 1000 !important;
    box-sizing: border-box !important;
}

/* Main content à droite du sidebar */
.main-content,
main.main-content {
    margin-left: 250px !important;
    width: calc(100% - 250px) !important;
    transform-origin: top left !important;
}

/* Wrapper du contenu principal */
#mainContent,
.content-wrapper {
    transform-origin: top left !important;
}

/* Mobile: sidebar collapse */
@media (max-width: 768px) {
    .sidebar {
        width: 200px !important;
        min-width: 200px !important;
        max-width: 200px !important;
    }

    .main-content {
        margin-left: 200px !important;
        width: calc(100% - 200px) !important;
    }
}

/* ==========================================
   FIX DÉBORDEMENT MENU - ÉLÉMENTS INTERNES
   ========================================== */

/* Tous les éléments du sidebar ne doivent pas déborder */
.sidebar *,
aside.sidebar * {
    max-width: 100% !important;
    box-sizing: border-box !important;
}

/* Navigation interne avec scroll */
.sidebar-nav,
.sidebar nav {
    max-height: calc(100vh - 150px) !important;
    overflow-y: auto !important;
    overflow-x: hidden !important;
}

/* Items du menu - taille contrôlée */
.sidebar .nav-item,
.sidebar button.nav-item {
    font-size: 0.85rem !important;
    padding: 0.65rem 0.75rem !important;
    width: 100% !important;
    max-width: 100% !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
    white-space: nowrap !important;
    box-sizing: border-box !important;
}

/* Texte des items - pas de débordement */
.sidebar .nav-item span {
    font-size: 0.85rem !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
    white-space: nowrap !important;
    display: inline-block !important;
    max-width: 150px !important;
}

/* Icônes - taille fixe */
.sidebar .nav-item i {
    font-size: 1rem !important;
    min-width: 1.2rem !important;
    max-width: 1.2rem !important;
    display: inline-block !important;
}

/* Sections du menu */
.sidebar .nav-section {
    padding: 0.5rem 0 !important;
    max-width: 100% !important;
}

.sidebar .nav-section-title {
    font-size: 0.7rem !important;
    padding: 0.5rem 1rem !important;
    text-transform: uppercase !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
}

/* Header du sidebar */
.sidebar-header {
    padding: 1rem !important;
    max-width: 100% !important;
    box-sizing: border-box !important;
}

.sidebar-header * {
    max-width: 100% !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
}

/* Logo */
.logo-container {
    max-width: 100% !important;
    overflow: hidden !important;
}

.logo-text {
    font-size: 1rem !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
}

/* Scrollbar du sidebar */
.sidebar::-webkit-scrollbar,
.sidebar-nav::-webkit-scrollbar {
    width: 6px !important;
}

.sidebar::-webkit-scrollbar-track,
.sidebar-nav::-webkit-scrollbar-track {
    background: transparent !important;
}

.sidebar::-webkit-scrollbar-thumb,
.sidebar-nav::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2) !important;
    border-radius: 3px !important;
}

.sidebar::-webkit-scrollbar-thumb:hover,
.sidebar-nav::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3) !important;
}
